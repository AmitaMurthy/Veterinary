@model Veterinary.Models.MyRegister

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var name = Request["name"];
    var userName = Request["Username"];
    var password = Request["pwd"];



}

<h2 style="color:ghostwhite; text-align:center;">Login</h2>

<div style="background-color:antiquewhite; color:black; margin:0; padding:40px 0 20px 0;">
    <form class="form-horizontal" method="post">


        <div class="form-group">
            <label class="control-label col-sm-2 col-sm-offset-1" name="name">Name:</label>
            <div class="col-sm-6">
                <p> @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "name", @placeholder = "FirstName LastName" })</p>

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2 col-sm-offset-1" name="Username">UserName:</label>
            <div class="col-sm-6">
                <p>@Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "email", @placeholder = "abc@xyz.com" })</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2 col-sm-offset-1" name="pwd">Password:</label>
            <div class="col-sm-6">
                <p>@Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "password", @placeholder = "" })</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
                <button type="submit" class="btn btn-success">Submit</button>
            </div>
        </div>
    </form>
</div>

   


   